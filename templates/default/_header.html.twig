<header class="header-main">

    <div class="top-navigation container">
        <div class="address">54 route de la plage, 56100 Lorient</div>

        {% if app.user %}
            Bonjour {{ app.user.firstName ~ ' ' ~ app.user.lastName }} <a href="{{ path('app_logout') }}" class="button
            button-secondary">Se
            déconnecter</a>
        {% else %}
            <a href="{{ path('app_login') }}" class="button button-secondary">Se connecter</a>
        {% endif %}

        <nav class="nav-social">
            <ul>
                <li>
                    <a href="#"><span class="fa fa-facebook"></span></a>
                    <a href="#"><span class="fa fa-twitter"></span></a>
                    <a href="#"><span class="fa fa-linkedin"></span></a>
                </li>
            </ul>
        </nav>
    </div>

    <div class="main-navigation container">
        <a href="{{ path('homepage') }}">
            <img src="{{ asset('images/logo.png') }}" class="logo" alt="Gamma Hotel">
        </a>
        <nav>
            <ul>
                <li>
                    <a href="{{ path('homepage') }}"
                       {% if app.request.attributes.get('_route') == "homepage" %}class="active"{% endif %}>Accueil
                    </a>
                </li>
                <li><a href="{{ path('construct_page') }}">Actualités</a></li>
                <li>
                    <a href="{{ path('accomodation_showAll') }}"
                       {% if app.request.attributes.get('_route') == "accomodation_showAll" %}class="active"{% endif %}>Nos Logements
                    </a>
                </li>
                <li><a href="{{ path('construct_page') }}">Contact</a></li>
            </ul>
        </nav>
    </div>

</header>

<section class="container">
    {% for message in app.flashes('success') %}
        <div style="background: #3c763d; color: white; border-radius: 8px; padding: 20px; margin: 30px 0;">
            {{ message }}
        </div>
    {% endfor %}
</section>

